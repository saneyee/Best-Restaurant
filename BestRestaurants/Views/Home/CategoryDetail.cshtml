<h1>Task List for @Model["category"].GetName()</h1>
<body>
  @if (@Model["tasks"].Count == 0)
  {
    <h3>No tasks have been added yet!</h3>
  }
  <table>
    <tr>
      <th>Id</th>
      <th>Task</th>
      <th>Due Date</th>
    </tr>
    @foreach (var task in @Model["tasks"])
    {
      <tr>
      <td>@task.GetId()</td>
      <td>@task.GetDescription() | <a href="/tasks/@task.GetId()/edit">Edit</a> | <a href="/tasks/@task.GetId()/delete">Delete</a></td>
      <td>@task.GetDueDate()</td>
      </tr>
    }
  </table>
<br>
  <a href="/@Model["category"].GetName()/@Model["category"].GetId()/task/add">Add Task</a><br>
  <a href="/">Homepage</a>
</body>
