<h1>To Do List Homepage</h1>

@if (@Model.Count == 0)
{
  <h3>No tasks have been added yet!</h3>
}

<table>
<tr>
  <th><strong>Id</strong></th>
  <th><strong>Task</strong></th>
  <th><strong>Category</strong></th>
  <th><strong>Due Date</strong></th>
</tr>
@* Tasks will be a list of Task objects from the entire database *@
@foreach (var task in Model)
{
  <tr>
    <th>@task.GetId()</th>
    <th>@task.GetDescription()</th>
    <th>@task.GetCategoryId()</th>
    <th>@task.GetDueDate()</th>
  </tr>
}
</table>

<a href="/category/add">Add Category</a> <br>
<a href="/category/list">View Categories</a>
