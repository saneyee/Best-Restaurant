<h2>Category List</h2>

<table>
  <tr>
    <th>No.</th>
    <th>Category Name</th>

  @if (@Model.Count == 0)
  {
    <h3>No categories have been added yet!</h3>
  }
  @foreach (var category in Model)
  {
    <tr>
    <th>@category.GetId()</th>
    <th><a href = '/@category.GetName()/@category.GetId()/tasklist'>@category.GetName()</a></th>
    </tr>
  }
</table>
<br>
<a href="/category/add">Add Category</a><br>
<a href="/">Homepage</a>
